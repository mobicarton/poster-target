<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>

        <item name="android:textViewStyle">@style/StandardTextViewStyle</item>
    </style>

    <style name="StandardTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="lineVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="lineHorizontal">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

</resources>
